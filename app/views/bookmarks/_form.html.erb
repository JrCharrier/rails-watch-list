<div class="form-container">
  <h2 class="form-title">Create Your Bookmark</h2>
  <%= simple_form_for([list, bookmark], html: { class: "styled-form" }) do |f| %>
    <div class="form-group">
      <%= f.association :movie, label: "Choose a movie", input_html: { class: "dropup form-input" }, label_html: { class: "form-label" } %>
    </div>
    <div class="form-group">
      <%= f.input :comment, label: "Your comment", input_html: { class: "form-input" }, label_html: { class: "form-label" } %>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-submit" %>
    </div>
  <% end %>
</div>
